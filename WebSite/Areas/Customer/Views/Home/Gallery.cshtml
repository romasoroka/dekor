<div class="container-fluid pb-5 portfolio-text text-center">
    <div class="row">
        <div class="col-md-10 offset-md-1 col-sm-12">
            <h2 class="section-title mt-3">Naše práce</h2>
            <div class="section-divider"></div>
            <p class="pb-4 pt-3 section-description">
                Prohlédněte si naši kolekci exkluzivních dekorativních povrchů,
                kde každá textura a odstín odhalují jedinečný charakter prostoru.
            </p>
        </div>
    </div>
</div>

<!-- Галерея -->
<div class="container-fluid pt-4">
    <div class="row justify-content-center">
        @for (int i = 0; i < 9; i++)
        {
            <div class="col-lg-4 col-md-6 col-sm-12 mb-4">
                <div class="card gallery-card">
                    <div class="card-img-container">
                        <img class="card-img-top" src="@($"/images/Gallery/{i+1}.jpg")" alt="Galerie obrázek">
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<!-- Стилі CSS -->
<style>
    /* Заголовок */
    .section-title {
        font-size: 2.5rem;
        font-weight: bold;
        text-transform: uppercase;
        text-align: center;
        margin-bottom: 20px;
    }

    /* Картки галереї */
    .gallery-card {
        border: none;
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
    }

    /* Контейнер для зображення */
    .card-img-container {
        width: 100%;
        height: 250px; /* Висота для однакового розміру карток */
        overflow: hidden;
        border-radius: 15px;
    }

    /* Зображення всередині картки */
    .card-img-top {
        width: 100%;
        height: 100%;
        object-fit: cover; /* Обрізання під розмір */
        transition: transform 0.3s ease-in-out;
    }

    /* Анімація при наведенні */
    .gallery-card:hover {
        transform: translateY(-5px);
        box-shadow: 0px 10px 20px rgba(0, 0, 0, 0.15);
    }

        .gallery-card:hover .card-img-top {
            transform: scale(1.1);
        }


  
   
</style>
